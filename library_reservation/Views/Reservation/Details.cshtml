@model library_reservation.Models.ReservationModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ReservationModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organizers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequiresMultimedia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequiresMultimedia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hall)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hall.Name)
        </dd>
        <dt class="col-sm-2">
            Is Event Recurring
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsRecurring)
        </dd>

        @if (Model.IsRecurring)
        {
            <dt class="col-sm-2">
                Recurrence type
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RecurringSettings.RecurrenceType)
            </dd>

            @if (Model.RecurringSettings.RecurrenceType == RecurringTypeEnum.Weekly)
            {
                <dt class="col-sm-2">
                    Recurring days
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecurringSettings.RecurringDays)
                </dd>
            }
            else
            {
                <dt class="col-sm-2">
                    Recurring months
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecurringSettings.RecurrinMonths)
                </dd>
            }

            @if (Model.RecurringSettings.EndType == EndTypeEnum.None)
            {
                <dt class="col-sm-2">
                    Event end type
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecurringSettings.EndType)
                </dd>

            }
            else if (Model.RecurringSettings.EndType == EndTypeEnum.Date)
            {
                <dt class="col-sm-2">
                    Event end type
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecurringSettings.EndType)
                </dd>
                <dt class="col-sm-2">
                    Recurrence end date
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecurringSettings.RecurrenceEndDate)
                </dd>
            }
            else
            {
                <dt class="col-sm-2">
                    Event end type
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecurringSettings.EndType)
                </dd>
                <dt class="col-sm-2">
                    Recurrence end counter
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecurringSettings.EndCounter)
                </dd>
            }
        }

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
